{
  "name": "@readerfront/api",
  "version": "0.4.0",
  "description": "A Graphql Backend for ReaderFront, written in Node.JS",
  "author": "dvaJi",
  "keywords": [
    "graphql",
    "node.js",
    "manga"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dvaJi/ReaderFront/issues"
  },
  "scripts": {
    "lint": "eslint ./src",
    "prettier": "pretty-quick --staged",
    "setup": "yarn setup:install && yarn setup:db",
    "setup:install": "yarn install",
    "setup:db": "yarn db:migrate && yarn db:seed",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:seed": "./node_modules/.bin/sequelize db:seed:all",
    "db:drop": "./node_modules/.bin/sequelize db:drop",
    "start": "cross-env NODE_ENV=development nodemon src/index.js --exec babel-node --ignore=node_modules",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js --exec babel-node --ignore=node_modules",
    "start:prod": "cross-env NODE_ENV=production yarn build && yarn start:server",
    "build": "babel src -s -D -d build",
    "build:wp": "webpack --mode production",
    "start:server": "cross-env NODE_ENV=production node --experimental-modules build/index.js",
    "test": "jest",
    "test:ci": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/node": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/runtime": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "babel-jest": "^28.1.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "sequelize-mock": "^0.10.2",
    "sequelize-test-utils": "^0.3.0",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "@readerfront/shared": "*",
    "archiver": "^5.3.1",
    "aws-sdk": "^2.1169.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "express": "^5.0.0-beta.1",
    "express-graphql": "^0.12.0",
    "feed": "^4.2.2",
    "fs-extra": "^10.1.0",
    "graphql": "^16.5.0",
    "graphql-date": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tools": "^8.3.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^15.0.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.7",
    "pdfkit": "^0.13.0",
    "sequelize": "^6.21.2",
    "sequelize-cli": "^6.4.1",
    "sharp": "^0.32.6",
    "sitemap": "4.1.1",
    "uuid": "^8.3.2"
  }
}
