{
  "name": "ravens-scans-frontend",
  "version": "3.2.0",
  "homepage": "https://ravens-scans.com/",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:lang": "babel scripts/translate.js | node",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "react-scripts test --env=jsdom --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "release": "standard-version",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.5",
    "@fortawesome/fontawesome-free-brands": "^5.0.9",
    "@fortawesome/fontawesome-free-solid": "^5.0.9",
    "@fortawesome/react-fontawesome": "^0.0.18",
    "bootstrap": "^4.0.0",
    "chai": "^4.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "js-cookie": "^2.2.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-cookie": "^2.1.4",
    "react-dom": "^16.3.1",
    "react-ga": "^2.4.1",
    "react-meta-tags": "^0.3.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "react-test-renderer": "^16.3.1",
    "reactstrap": "^5.0.0",
    "sinon": "^4.5.0",
    "standard-version": "^4.3.0",
    "styled-components": "^3.2.5",
    "w3c-xmlhttprequest": "^2.1.2"
  },
  "devDependencies": {
    "jest-styled-components": "^5.0.1"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost/FoOlSlide",
      "ws": true
    },
    "/content": {
      "target": "http://localhost/FoOlSlide",
      "ws": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/Routes.js",
      "!src/registerServiceWorker.js",
      "!src/common/WithTracker.js",
      "!src/App.js",
      "!src/services/api.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  }
}
